@page
@model Koala.Pages.Administration.Packages.IndexModel

@{
    ViewData["Title"] = "产品档案管理";
}
<div class="container-fluid p-3">
<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="home-tab" data-bs-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">产品档案</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="profile-tab" data-bs-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">新增</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="contact-tab" data-bs-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Contact</a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
        <div class="bg-white p-3">
            <table id="mainTable" class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Package[0].Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Package[0].Code)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Package[0].ShortName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Package[0].CreateOn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Package[0].CreateBy)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Package[0].UpdateOn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Package[0].UpdateBy)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Package[0].IsDelete)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Package) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ShortName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreateOn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreateBy)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UpdateOn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UpdateBy)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsDelete)
                            </td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">

    </div>
</div>
</div>