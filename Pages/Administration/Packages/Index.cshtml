@page
@model Koala.Pages.Administration.Packages.IndexModel

@{
    ViewData["Title"] = "产品档案管理";
}

<div class="container-fluid p-3">
    <div class="bg-white p-3">
        <table id="mainTable" class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Package[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Package[0].Code)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Package[0].ShortName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Package[0].CreateOn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Package[0].CreateBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Package[0].UpdateOn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Package[0].UpdateBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Package[0].IsDelete)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Package) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShortName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreateOn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreateBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdateOn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdateBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsDelete)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>