@page
@model Koala.Pages.Administration.Roles.CreateModel

@{
    ViewData["Title"] = "角色管理";
}
<div class="container-fluid p-3">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link active" id="home-tab" data-bs-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">角色档案</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="profile-tab" data-bs-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false"><i class="bi bi-file-text"></i>新增角色</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="wizard-tab" data-bs-toggle="tab" href="#wizard" role="tab" aria-controls="wizard" aria-selected="false"><i class="bi bi-question-circle"></i>&nbsp;操作向导</a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade bg-white show active" id="home" role="tabpanel" aria-labelledby="home-tab">

        </div>
        <div class="tab-pane fade bg-white" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            <form method="post">
                <input type="hidden" asp-for="Role.Id" class="form-control" />
                <div class="container-fluid p-3">
                    <div class="bg-white p-3">
                        <h1>Create</h1>

                        <h4>Role</h4>
                        <hr />
                        <div class="row">
                            <div class="col-md-4">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <fieldset>
                                    <legend>角色名称</legend>
                                    <div class="form-group mb-3">
                                        <label asp-for="Role.Name" class="control-label must-field">角色名称</label>
                                        <input asp-for="Role.Name" class="form-control" />
                                        <span asp-validation-for="Role.Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label asp-for="Role.HospitalId" class="control-label not-must-field">所属院区</label>
                                        <input asp-for="Role.HospitalId" class="form-control" readonly placeholder="-" />
                                        <span asp-validation-for="Role.HospitalId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mb-4">
                                        <label asp-for="Role.SectionId" class="control-label not-must-field">所属科室</label>
                                        <input asp-for="Role.SectionId" class="form-control" readonly placeholder="-" />
                                        <span asp-validation-for="Role.SectionId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Role.Status" class="control-label must-field">状态</label>
                                        <input asp-for="Role.Status" class="form-control" />
                                        <span asp-validation-for="Role.Status" class="text-danger"></span>
                                    </div>
                                </fieldset>
                                <div class="form-group mt-3">
                                    <input type="submit" value="新增" class="btn btn-primary" />
                                    <input type="submit" value="新增并继续" class="btn btn-warning" />
                                    <a class="btn btn-secondary" asp-page="Index">Back to List</a>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <fieldset>
                                    <legend>功能权限</legend>
                                    <div class="form-group">
                                        <label asp-for="Role.CreateOn" class="control-label must-field">功能权限</label>
                                        <input asp-for="Role.CreateOn" class="form-control" />
                                        <span asp-validation-for="Role.CreateOn" class="text-danger"></span>
                                    </div>
                                </fieldset>

                            </div>
                            <div class="col-md-4">
                                <fieldset>
                                    <legend>数据权限</legend>
                                    <div class="form-group">
                                        <label asp-for="Role.UpdateOn" class="control-label must-field">数据权限</label>
                                        <input asp-for="Role.UpdateOn" class="form-control" />
                                        <span asp-validation-for="Role.UpdateOn" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Role.IsDelete" class="control-label"></label>
                                        <input asp-for="Role.IsDelete" class="form-control" />
                                        <span asp-validation-for="Role.IsDelete" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" checked>
                                            <label class="form-check-label" for="flexCheckDefault">自己添加的数据</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                                            <label class="form-check-label" for="flexCheckChecked">所在工作组的数据</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                                            <label class="form-check-label" for="flexCheckChecked">所在科室内的数据</label>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

        </div>
        <div class="tab-pane fade bg-white" id="wizard" role="tabpanel" aria-labelledby="wizard-tab">

        </div>
    </div>
</div>