@page
@model Koala.Pages.Administration.Versions.IndexModel

@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid p-3">
    <div class="bg-white p-3">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Version[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Version[0].PublishOn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Version[0].VersionLog)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Version[0].UpdateOn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Version[0].UpdateBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Version[0].UpdateLog)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Version) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PublishOn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VersionLog)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdateOn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdateBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdateLog)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>