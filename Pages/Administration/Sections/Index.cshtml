@page
@model Koala.Pages.Administration.Sections.IndexModel

@{
    ViewData["Title"] = "科室管理";
}

<div class="container-fluid p-3">
    <div class="bg-white p-3">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Section[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Section[0].ShortName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Section[0].HospitalId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Section[0].Pinyin)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Section[0].Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Section[0].ManagerId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Section[0].CreateOn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Section[0].UpdateOn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Section[0].IsDelete)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Section) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShortName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HospitalId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pinyin)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ManagerId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreateOn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdateOn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsDelete)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>