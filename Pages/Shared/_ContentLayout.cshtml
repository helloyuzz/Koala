<body style="overflow:hidden;" class="p-3 h-100">
        @RenderBody()

    <script>
        $(document).ready(function () {
            if ($('#mainTable').length > 0) {
                $("#mainTable tr").click(function (e) {              // issue绑定click，支持选中效果
                    $("#mainTable tr").removeClass('active');
                    $(this).addClass('active');
                });
            }
        });
    </script>
</body>
