@page
@model Koala.Pages.LogoutModel
@using Koala.Extensions
@using Koala.Models
@{
    Account account = CookieUtils.Get(HttpContext.User.Claims.ToList());
    if (account.IsAdmin.Value) {
        //Layout = "";
    } else {
        Layout = "/Pages/Shared/_ClientLayout.cshtml";
    }
    ViewData["Title"] = "是否退出登录？";
}
<form action="" method="post" class="p-4">
    <div class="col-md-6 mb-3">
        <label class="form-label">帐号</label>
        <label class="form-control">@account.Login</label>
    </div>
    <div class="col-md-6">
        <label class="form-label">最近登录日期</label>
        <label class="form-control">@account.LastLoginOn</label>
    </div>
    <div class="mt-3 mb-3">
        <input type="submit" value="退出" />
    </div>
</form>